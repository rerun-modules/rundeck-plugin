#!/usr/bin/env bash

# To implement this command, edit the "Command implementation" section below. 

# Usage
# -----

# Comments prefixed with `#/` are managed by stubbs.
# The `command` and `usage` comments describe the command
# and show its options.
# 
#/ command: rundeck-plugin:remote-node-steps: "Create a node step useable in a workflow"
#/ usage: rerun rundeck-plugin:remote-node-steps [ --name <>]  --version <1.0.0>  --modules <> [ --build-dir <.>] 

# Load common functions
# ---------------------

# Load the function library for this module.
# This loads rerun functions, too.
. "$RERUN_MODULE_DIR/lib/functions.sh" remote-node-steps || { 
  echo >&2 "Failed loading function library." ; exit 1 ; 
}

# Error handling
# ---------------

# This script is designed to _fail-fast_.

# Trap errors and exit. The call to `rerun_die` will print the
# the error message and exit with the error command exit status. 

trap 'rerun_die $? "*** command failed: rundeck-plugin:remote-node-steps. ***"' ERR

# Run [set] `nounset` to treat unset variables as errors. Set [pipefail]
# so a pipeline return status is the value of the last 
# (rightmost) command to exit with non-zero status.
#
# [set]: http://ss64.com/bash/set.html
# [pipefail]: http://www.gnu.org/software/bash/manual/html_node/Pipelines.html

set -o nounset -o pipefail

# Command variables
# -----------------

# This command script can access the following variables
# declared by `rerun` or by the option parser function.

#/ rerun-variables: RERUN, RERUN_VERSION, RERUN_MODULES, RERUN_MODULE_DIR
#/ option-variables: NAME VERSION MODULES BUILD_DIR

# The `rerun_options_parse` function processes the command line
# arguments. Each accepted command line flag results in setting 
# one the corresponding option variables.

rerun_options_parse "$@"


# Command implementation
# ----------------------

populate_required_options() {
    [[ ! $# = 2 ]] && { 
        echo >&2 "usage: options_required <moddir> <command>" 
        return 1 ; 
    }
    local -r moddir=$1 cmd=$2
    local -a required=()
    for option in $(rerun_options $(dirname "$moddir") $(basename "$moddir") "$cmd")
    do
        local opt_required=$(rerun_property_get "$moddir/options/$option" REQUIRED)
        local opt_plugin_required=$(rerun_property_get "$moddir/options/$option" RUNDECK_PLUGIN_CONFIG_REQUIRED)
        if [[ "${opt_required:-}" == "true" || "${opt_plugin_required:-}" == "true" ]] 
        then required=( ${required[*]:-} --${option} \"\${config.${option}\}\" )
    	fi
    done
    echo "${required[*]:-}"
}

# - - -
# Default BUILD_DIR to current working directory, if unspecified by user.
: "${BUILD_DIR:=$(pwd)/build}"

MODULES_DIR=$(dirname "$RERUN_MODULE_DIR")

PLUGIN_NAME="$NAME"

: "${FILE:=$PLUGIN_NAME.zip}"


rerun_log info "Generating plugin providers for modules: $MODULES ..."

# Create the directory hierarchy for the plugin
create_build_hierarchy "$BUILD_DIR/$NAME"

rerun_log info "Running stubbs:archive ..."
create_stubbs-archive "$MODULES" "$VERSION" "$BUILD_DIR/$NAME"


# Generate the plugin.yaml 
rerun_log info "Generating $BUILD_DIR/$PLUGIN_NAME/plugin.yaml ..."
cat > "$BUILD_DIR/$PLUGIN_NAME/plugin.yaml" <<EOF
# Generated by rundeck-plugin:remote-node-steps. Do not edit.
name: $PLUGIN_NAME
version: $VERSION
rundeckPluginVersion: 1.2
author: $USER
date: $(date)
providers:
EOF


for module in $MODULES
do
	commands=($(rerun_commands "$MODULES_DIR" "$module"))
	rerun_log info "Creating RemoteScriptNodeStep providers for ${#commands[*]} commands in $module ..."
	for command in ${commands[*]}
	do
		PLUGIN_STEP_TYPE=RemoteScriptNodeStep

		DESCRIPTION=$(rerun_property_get "$MODULES_DIR/$module/commands/$command" DESCRIPTION)
		! plugintype=$(rerun_property_get "$MODULES_DIR/$module/commands/$command" RUNDECK_PLUGIN_STEP_TYPE) && :
		! sudo_user=$(rerun_property_get "$MODULES_DIR/$module/commands/$command" RUNDECK_PLUGIN_SUDO_USER) && :
		[[ -n ${plugintype:-} ]] && PLUGIN_STEP_TYPE=$plugintype

		printf -- "- %s:%s (%s) " "$module" "$command" "$PLUGIN_STEP_TYPE"

		# required options should refer to config properties. Eg, --myoption ${config.myoption}
		populated_required_options=$(populate_required_options "$MODULES_DIR/$module" "$command")

		if [[ -n "${sudo_user:-}" ]]
		then
			script_interpreter="sudo -u ${sudo_user} /bin/bash"
		else
			script_interpreter="/bin/bash"			
		fi

		cat >> "$BUILD_DIR/$PLUGIN_NAME/plugin.yaml" <<-EOF
			  - name: $module:$command
			    service: $PLUGIN_STEP_TYPE
			    title: '$module: $command'
			    description: '$DESCRIPTION'
			    plugin-type: script
			    script-interpreter: $script_interpreter
			    script-file: rerun.sh 
			    script-args: $module:$command ${populated_required_options:-}
			    config:
			$(for option in $(rerun_options "$MODULES_DIR" "$module" "$command"); do 
			printf "  %s\n" "$(generate_config_property "$module" "$option")"; 
			done)
		EOF
		[[ -e "$MODULES_DIR/$module/resources/icon.png" ]] && {
			cp "$MODULES_DIR/$module/resources/icon.png" "$BUILD_DIR/$PLUGIN_NAME/resources/icon.png"
		}
		printf "[OK]\n"

	done

done

rerun_log info "Archiving $PLUGIN_NAME plugin..."
pushd "$BUILD_DIR" >/dev/null
zip -r "$FILE" "$PLUGIN_NAME"

rerun_log "Plugin archived: $(pwd)/$FILE"
rerun_log "Deploy: cp $(pwd)/$FILE \$RDECK_BASE/libext"

popd >/dev/null

# Done. Exit with last command exit status.
exit $?

# - - -


